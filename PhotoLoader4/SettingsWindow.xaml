<Window x:Class="PhotoLoader4.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" MaxWidth="500" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="174" d:DesignWidth="302" SizeToContent="WidthAndHeight">
         <StackPanel >
      <TextBlock Text="Source Paths:" Margin="5,5,0,0"/>
      <TextBox x:Name="SourcePath" Text="{Binding SourcePaths, Mode=TwoWay}" Margin="5,0,5,0"  />
      <TextBlock Text="Destination Path:" Margin="5,5,0,0"/>
      <TextBox x:Name="DestPath" Text="{Binding DestPath, Mode=TwoWay}" Margin="5,0,5,10" />
      <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
         <Button x:Name="RegisterClient" Content="Get Access" Width="80" Margin="5" Click="RegisterClientClick"/>
         <Button x:Name="OkButton" Content="Ok" Width="60" Margin="5" Click="OkButtonClick"/>
         <Button x:Name="CancelButton" Content="Cancel" Margin="5" Width="60" Click="CancelButtonClick"/>
      </StackPanel>
   </StackPanel>
</Window>
